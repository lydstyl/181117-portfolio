extends layout

block content
  if file
    h1 Edit or update #{file.id} // #{file.name}
    form(action='/form/update' method='post')
      input(type='hidden' id='id' name='id' value=file.id)
      label(for='name') Name:
      input(type='text' id='name' name='name' value=file.name required)
      input.d-none(type='submit' value='go')
    form#ajax-upload(action='/form/updateimg' method='post' enctype='multipart/form-data')
      label(for='myimage') Image:
      input(type='hidden' name='id' value=file.id)
      input(type='file' name='myimage')
      br
      input(type='submit' name='submit' value='submit')
    div#result.d-none
      img(src="https://surroundedbyflowers.com/wp-content/themes/opalmine/img/spinner.gif", alt="spinner")
  else
    h1 Add or create
    form(action='add' method='post')
      label(for='name') Name:
      input(type='text' id='name' name='name' required)
      input(type='submit' value='go')